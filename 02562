//2562 최댓값
//9개의 서로 다른 자연수 중 최댓값을 찾고 그 최댓값이 몇 번째 수인지를 구하는 프로그램
//input : 정수 9개
//output  최댓값, 최댓값의 위치

#include <iostream>
using namespace std;

const int a = 9;
int number[a];

int main(void)
{
	int n, max, order;

	for (int i = 0; i < a; i++)
	{
		cin >> n;
		number[i] = n;
	}

	max = number[0];
	order = 1;

	for (int j = 0; j < a; j++)
	{
		if (max < number[j])
		{
			max = number[j];
			order = j+1;
		}
	}

	cout << max << "\n" << order;

	return 0;
}
